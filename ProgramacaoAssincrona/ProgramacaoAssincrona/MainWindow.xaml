        <TextBox x:Name="OutBox" HorizontalAlignment="Left" Margin="28,29,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="364" Height="371" FontSize="16" FontFamily="Bahnschrift Light"/>
